# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
# Auto-detected from worktree directory during `bun dev`
# Main worktree: 4000, worktree-1: 4001, worktree-2: 4002, etc.
PORT=4000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Frontend URL for CORS
# Auto-detected from worktree directory during `bun dev`
# Main worktree: http://localhost:6000, worktree-1: http://localhost:6001, etc.
FRONTEND_URL=http://localhost:6000

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=your-database-url
